<% layout('/layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New campgrounds</h1>
    <div class="col-6 offset-3 card shadow pt-3 pb-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data" autocomplete="off">
            <div class="mb-3">
                <label class="form-label"for="title">Title:</label>
                <input class="form-control"type="text" id="title" name="campground[title]"  required>
                <div class="valid-feedback">
                    Title looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please type your title!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="location">Location:</label>
                <input class="form-control"type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Location looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please type your location!
                  </div>
            </div>
            <div class="form-label mb-3" >
              <label class="form-label" for="image">Image Url:</label>
              <!-- <input type="file" class="form-control" id="image" name="image"> -->
              <!-- for array upload -->
              <input type="file" class="form-control" id="image" name="image" required multiple>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label"for="image">Image Url:</label>
                <input class="form-control"type="file" id="image" name="campground[image]" required> 
                <div class="valid-feedback">
                    Image looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please type your img URL!
                  </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label pe-2"for="price">Price:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="price-label">$</span>
                    </div>
                    <input name="campground[price]" type="number" id="price" class="form-control" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        Price looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please type your price!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="description">Description:</label>
                <textarea required cols="10" rows="5" class="form-control"type="text" id="description" name="campground[description]"></textarea>
                <div class="valid-feedback">
                    Description looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please type your description!
                  </div>
            </div>
            <button class="btn btn-success mb-3">Add</button>
            <br>
            <a class = "btn btn-primary" href="/campgrounds">All campgrounds</a>
        </form>
    </div>
</div>
    